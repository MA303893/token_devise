<div class="row">
	<%= devise_error_messages! %>
	<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),  :role => "form") do |f| %>
        	<fieldset>
            <div class="form-group">
							<%= f.text_field :username, autofocus: true, :class => "form-control", :placeholder => "AD-ID" %>
						</div>
						<div class="form-group">
							<%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password", :type => "password" %>
						</div>
						<div class="form-group">
							<% if devise_mapping.rememberable? -%>
								<div class="checkbox">
									<label>
										<%= f.check_box :remember_me %> Remember Me
									</label>
								</div>
							<% end -%>
						</div>

						<div class="form-group">
							<%= button_tag(type: "submit", class: "btn btn-block btn-primary") do %>
	    					<i class="fa fa-sign-in fa-fw"></i> Login
							<% end %>
						</div>
						<div class="form-group">
							<%= render "devise/shared/links" %>
						</div>
					</fieldset>
				<% end %>
      </div>
    </div>
  </div>
</div>